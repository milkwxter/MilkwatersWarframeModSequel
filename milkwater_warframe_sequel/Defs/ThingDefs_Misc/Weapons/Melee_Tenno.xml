<Defs>

<!-- Ceramic Dagger -->
<ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality" Class="WarframeModSequel.WarframeMeleeThingDef">
    <defName>Milkwater_Ceramic_Dagger</defName>
    <label>ceramic dagger</label>
    <description>This short blade weapon was built using ceramic. It has limited range but comes out fast.</description>
    <graphicData>
      <texPath>Things/Weapons/Milkwater_Ceramic_Dagger</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <soundInteract>Milkwater_Interact_Melee</soundInteract>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>TableOrokin</li>
      </recipeUsers>
      <researchPrerequisite>WF_TennoWeaponry</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <Mass>1</Mass>
    </statBases>
    <costList>
      <Plasteel>25</Plasteel>
    </costList>
	<weaponClasses>
      <li>Melee</li>
    </weaponClasses>
    <tools>
      <li>
        <label>point</label>
        <capacities>
          <li>WF_Sharp</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>WF_Sharp</li>
        </capacities>
        <power>7</power>
        <cooldownTime>0.7</cooldownTime>
      </li>
    </tools>
	
	<hediffToAdd>WF_Generic_Puncture</hediffToAdd>
	<hediffChance>0.06</hediffChance>
	<critChance>0.30</critChance>
	<critDamage>2.80</critDamage>
	
  </ThingDef>
  
