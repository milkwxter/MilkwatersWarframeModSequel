<?xml version="1.0" encoding="utf-8"?>

<Defs>
  
  <!--===== Bubonico =====-->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Milkwater_Bubonico</defName>
    <label>bubonico</label>
    <description>Move in for the kill by unloading a multi-shot barrage of toxic barbs with primary fire.</description>
    <graphicData>
      <texPath>Things/Weapons/Milkwater_Bubonico</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>2.0</drawSize>
    </graphicData>
    <soundInteract>Milkwater_Interact_Infested</soundInteract>
	<equippedAngleOffset>30</equippedAngleOffset>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>TableOrokin</li>
      </recipeUsers>
      <researchPrerequisite>WF_InfestedWeaponry</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>30000</WorkToMake>
      <Mass>15</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.50</AccuracyLong>
      <RangedWeapon_Cooldown>2.30</RangedWeapon_Cooldown>
    </statBases>
    <costList>
	  <NanoSpores>300</NanoSpores>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Milkwater_Arrow_Bubonico</defaultProjectile>
        <warmupTime>1.9</warmupTime>
        <range>35</range>
        <burstShotCount>7</burstShotCount>
        <ticksBetweenBurstShots>6</ticksBetweenBurstShots>
        <soundCast>Milkwater_Shot_Bubonico</soundCast>
        <muzzleFlashScale>0</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>tendril</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>13</power>
        <cooldownTime>1.1</cooldownTime>
      </li>
    </tools>
    <weaponClasses>
      <li>Ranged</li>
      <li>RangedHeavy</li>
	  <li>LongShots</li>
    </weaponClasses>
    <weaponTags>
      <li>LongShots</li>
	  <li>SpacerGun</li>
    </weaponTags>
  </ThingDef>
  
  <!--===== Tysis =====-->
