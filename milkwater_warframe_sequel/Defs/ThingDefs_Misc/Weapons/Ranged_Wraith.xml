<?xml version="1.0" encoding="utf-8"?>

<Defs>
  
  <!--===== Strun Wraith =====-->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Milkwater_Strun_Wraith_Shotgun</defName>
    <label>strun wraith</label>
    <description>A different take on a familiar shotgun, the Strun Wraith features unique styling.</description>
    <graphicData>
      <texPath>Things/Weapons/Milkwater_Strun_Wraith</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>TableOrokin</li>
      </recipeUsers>
      <researchPrerequisite>WF_WraithWeaponry</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <Mass>5</Mass>
      <AccuracyTouch>0.82</AccuracyTouch>
      <AccuracyShort>0.72</AccuracyShort>
      <AccuracyMedium>0.55</AccuracyMedium>
      <AccuracyLong>0.30</AccuracyLong>
      <RangedWeapon_Cooldown>2.1</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Milkwater_Strun_Shotgun>1</Milkwater_Strun_Shotgun>
	  <ComponentWraith>3</ComponentWraith>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Milkwater_Bullet_Strun_Wraith</defaultProjectile>
        <warmupTime>1.8</warmupTime>
        <range>20</range>
        <burstShotCount>2</burstShotCount>
        <ticksBetweenBurstShots>9</ticksBetweenBurstShots>
        <soundCast>Milkwater_Shot_Strun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.7</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.7</cooldownTime>
      </li>
    </tools>
    <weaponClasses>
      <li>Ranged</li>
      <li>RangedLight</li>
    </weaponClasses>
    <weaponTags>
      <li>ShortShots</li>
	  <li>SpacerGun</li>
    </weaponTags>
  </ThingDef>
   
</Defs>