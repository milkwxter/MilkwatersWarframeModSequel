<?xml version="1.0" encoding="utf-8"?>

<Defs>
  
  <!--===== Despair =====-->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Milkwater_Despair</defName>
    <label>despair</label>
    <description>Used by the Stalker, Despair throwing blades have a mono-filament edge, sharp enough to penetrate a Warframe.</description>
    <graphicData>
      <texPath>Things/Weapons/Milkwater_Despair</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.7</drawSize>
    </graphicData>
    <soundInteract>Milkwater_Interact_Melee</soundInteract>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>TableOrokin</li>
      </recipeUsers>
      <researchPrerequisite>WF_StalkerWeaponry</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>25000</WorkToMake>
      <Mass>1</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.50</AccuracyLong>
      <RangedWeapon_Cooldown>1.40</RangedWeapon_Cooldown>
    </statBases>
    <costList>
	  <Plasteel>50</Plasteel>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Milkwater_Knife_Despair</defaultProjectile>
        <warmupTime>1.3</warmupTime>
        <range>20</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>1</ticksBetweenBurstShots>
        <soundCast>Milkwater_Shot_Despair</soundCast>
        <muzzleFlashScale>0</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>blade</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>13</power>
        <cooldownTime>1.1</cooldownTime>
      </li>
    </tools>
    <weaponClasses>
      <li>Ranged</li>
      <li>RangedLight</li>
	  <li>ShortShots</li>
    </weaponClasses>
    <weaponTags>
      <li>ShortShots</li>
	  <li>SpacerGun</li>
    </weaponTags>
  </ThingDef>
   
</Defs>