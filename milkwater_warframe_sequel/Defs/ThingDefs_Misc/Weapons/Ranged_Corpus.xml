<Defs>

<!--===== Dera =====-->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Milkwater_Dera_Laser</defName>
    <label>dera</label>
    <description>The Dera is a repeater that fires super-heated plasma.</description>
    <graphicData>
      <texPath>Things/Weapons/Milkwater_Dera</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>TableOrokin</li>
      </recipeUsers>
      <researchPrerequisite>WF_CorpusWeaponry</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>30000</WorkToMake>
      <Mass>5</Mass>
      <AccuracyTouch>0.7</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.55</AccuracyLong>
      <RangedWeapon_Cooldown>1.60</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Plasteel>70</Plasteel>
	  <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Milkwater_Laser_Dera</defaultProjectile>
        <warmupTime>1.8</warmupTime>
		<burstShotCount>4</burstShotCount>
        <ticksBetweenBurstShots>9</ticksBetweenBurstShots>
        <range>35</range>
        <soundCast>Milkwater_Shot_Dera</soundCast>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.7</cooldownTime>
      </li>
	  <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.7</cooldownTime>
      </li>
    </tools>
    <weaponClasses>
      <li>Ranged</li>
      <li>RangedLight</li>
	  <li>LongShots</li>
    </weaponClasses>
    <weaponTags>
		<li>CorpusLight</li>
      <li>LongShots</li>
	  <li>SpacerGun</li>
    </weaponTags>
  </ThingDef>
  
