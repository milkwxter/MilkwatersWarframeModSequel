<Defs>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Milkwater_Apparel_ExcaliburHelmet</defName>
    <label>excalibur helmet</label>
    <description>A helmet codenamed "Excalibur".</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Things/Apparel/Excalibur/ExcaliburHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <costList>
      <Steel>40</Steel>
    </costList>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>2</Mass>
      <Flammability>0.1</Flammability>
      <ArmorRating_Sharp>0.75</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.45</ArmorRating_Blunt>
      <ArmorRating_Heat>0.75</ArmorRating_Heat>
      <Insulation_Cold>8</Insulation_Cold>
      <Insulation_Heat>6</Insulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Excalibur/ExcaliburHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
	  <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
	<recipeMaker>
      <recipeUsers Inherit="False">
      </recipeUsers>
    </recipeMaker>
	<thingCategories Inherit="False">
      <li>Headgear</li>
    </thingCategories>
  </ThingDef>
  
