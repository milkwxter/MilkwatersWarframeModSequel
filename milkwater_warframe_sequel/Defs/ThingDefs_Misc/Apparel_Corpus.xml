<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Milkwater_Apparel_CorpusHelmet</defName>
    <label>corpus crewman helmet</label>
    <description>A helmet worn by the Corpus crewmen.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Things/Apparel/Corpus/CorpusHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <costList>
      <Steel>30</Steel>
    </costList>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>2.4</Mass>
      <Flammability>0.1</Flammability>
      <ArmorRating_Sharp>0.55</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
      <ArmorRating_Heat>0.75</ArmorRating_Heat>
      <Insulation_Cold>4</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Corpus/CorpusHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>CorpusArmor</li>
      </tags>
	  <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>TableOrokin</li>
      </recipeUsers>
	  <researchPrerequisite>WF_CorpusArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
	<thingCategories Inherit="False">
      <li>Headgear</li>
    </thingCategories>
  </ThingDef>
  
