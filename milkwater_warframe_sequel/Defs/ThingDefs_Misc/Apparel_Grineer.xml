      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
	<recipeMaker>
      <recipeUsers Inherit="False">
        <li>TableOrokin</li>
      </recipeUsers>
	  <researchPrerequisite>WF_GrineerArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <thingCategories Inherit="False">
      <li>Apparel</li>
    </thingCategories>
  </ThingDef>

</Defs>