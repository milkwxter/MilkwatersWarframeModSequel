<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=============== Warframe Parts ====================-->
  <ThingDef ParentName="ResourceBase">
    <defName>WarframeParts</defName>
    <label>warframe parts</label>
    <description>Miscellaneous neuroptics, systems, and a chassis. Necessary for assembling a complex Warframe.</description>
    <possessionCount>2</possessionCount>
    <graphicData>
      <texPath>Things/Item/Resource/milkwater_warframe_parts</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>3</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
	
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <MarketValue>400</MarketValue>
      <Mass>5</Mass>
      <Flammability>0.2</Flammability>
      <DeteriorationRate>2.0</DeteriorationRate>
	  <WorkToMake>15000</WorkToMake>
    </statBases>
	
	<thingCategories>
      <li>ItemsMisc</li>
    </thingCategories>
    <intricate>true</intricate>
	<tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
	
	<recipeMaker>
      <recipeUsers Inherit="False">
        <li>TableOrokin</li>
      </recipeUsers>
      <researchPrerequisite>WF_Warframes</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
	
    <costList>
      <Steel>80</Steel>
	  <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
  </ThingDef>

</Defs>
